<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">

<style>
  .product-details-container {
    background-color: #161616;
    color: #ffffff;
  }

  .product-details {
    background-color: #f8f9fa;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  }
</style>

<div class="d-flex justify-content-center align-items-center vh-100 product-details-container">
  <div class="rounded p-4 product-details" style="width: 200px;">
    <h2 class="text-dark mb-3">{{product.title}}</h2>


    <p class="text-muted"><i class="fas fa-align-left mr-2"></i>{{product.description}}</p>


    <p class="text-success mb-1"><i class="fas fa-tag mr-2"></i>${{product.price}}</p>


    <p class="mb-4 text-black"><i class="fas fa-warehouse mr-2"></i>Stock: {{product.stock}}</p>

  </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js"></script>